<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#3bcafa"
    tools:context=".MainActivity">

    <!--    android:background="@drawable/background"-->
    <Switch
        android:id="@+id/switch2"
        android:layout_width="289dp"
        android:layout_height="52dp"
        android:layout_marginTop="84dp"
        android:background="#495db6"
        android:backgroundTint="#070101"
        android:backgroundTintMode="add"
        android:buttonTint="#C53131"
        android:fontFamily="sans-serif"
        android:text="Activate Image Duplicator"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/destinationsList"
        android:layout_width="193dp"
        android:layout_height="47dp"
        android:background="#495db6"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Destiations List"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/defaultDest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch2" />

    <Switch
        android:id="@+id/defaultDest"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_marginTop="112dp"
        android:background="@color/black"
        android:textAlignment="center"
        android:text="Default Folder"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch2" />

    <Switch
        android:id="@+id/googlePhotos"
        android:layout_width="199dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"
        android:textAlignment="center"
        android:text="Google Photos"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defaultDest" />



    <TextView
        android:id="@+id/googleAccountInfo"
        android:layout_width="216dp"
        android:layout_height="55dp"
        android:layout_marginBottom="248dp"
        android:background="@color/black"
        android:text="Account: "
        android:textColor="#F4EFEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>